<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/profile_iv"
        android:layout_width="253dp"
        android:layout_height="205dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_launcher_background" />

    <Button
        android:id="@+id/camera_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_iv"
        android:layout_marginTop="16dp"
        android:text="Сделать фото" />

    <Button
        android:id="@+id/gallery_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/camera_btn"
        android:layout_marginTop="16dp"
        android:text="Выбрать фото из галереи" />

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="236dp"
        android:layout_height="180dp"
        android:layout_below="@id/gallery_btn"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/video_camera_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_view"
        android:layout_marginTop="16dp"
        android:text="Записать видео" />

    <Button
        android:id="@+id/video_gallery_btn"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_below="@id/video_camera_btn"
        android:layout_marginTop="16dp"
        android:text="Выбрать видео из галереи" />

</RelativeLayout>